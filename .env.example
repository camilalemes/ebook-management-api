# Ebook Management API Configuration
# Copy this to .env and update with your actual values

# Network Configuration (for homelab integration)
PC_IP=192.168.50.100
NAS_IP=192.168.50.200
SMB_USER=guest
SMB_PASS=
NAS_SHARE_PATH=/volume1/ebook-replicas

# Calibre Library Configuration  
CALIBRE_LIBRARY_PATH=/app/data/calibre-library
REPLICA_PATHS=/app/data/replicas/pc-fallback,/app/data/replicas/nas
CALIBRE_CMD_PATH=calibredb

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=1.0.0
API_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log